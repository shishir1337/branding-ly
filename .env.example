# Database connection string
DATABASE_URI=mongodb://127.0.0.1/your-database-name

# Or use a PG connection string
#DATABASE_URI=postgresql://127.0.0.1:5432/your-database-name

# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Port for Next.js server (default: 30042)
PORT=30042

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE

# Resend Email Configuration
RESEND_API_KEY=YOUR_RESEND_API_KEY_HERE
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Your App Name

NODE_ENV=development

# Cloudflare R2 Storage (S3-compatible API)
# Get credentials from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_BUCKET=brandingly
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
# Public URL for media (custom domain on R2 bucket)
R2_PUBLIC_URL=https://cdn.brandingly.agency
# Optional: Override endpoint (default uses your account's R2 endpoint)
# R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com